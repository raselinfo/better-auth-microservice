{
  "name": "@workspace/auth",
  "version": "1.1.0",
  "type": "module",
  "description": "Authentication microservice built with Hono",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:watch": "nodemon --exec tsx src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx src/db/seed.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "open:docs": "open-cli http://localhost:4000/api/auth/reference",
    "betterauth:generate": "npx @better-auth/cli generate --config ./better-auth.config.json --output ./src/db/schemas/auth.ts"
  },
  "keywords": [
    "auth",
    "hono",
    "api",
    "microservice"
  ],
  "author": "StackLearner Team",
  "license": "MIT",
  "dependencies": {
    "@better-auth/oauth-provider": "^1.4.17",
    "@hono/node-server": "^1.19.7",
    "better-auth": "^1.4.7",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.10.8",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "resend": "^6.8.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.2",
    "@types/pg": "^8.15.4",
    "better-call": "^1.1.7",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.39.1",
    "globals": "^17.1.0",
    "nodemon": "^3.1.11",
    "open-cli": "^8.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.53.1"
  }
}
